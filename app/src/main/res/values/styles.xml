<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="AuthFields" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/lightGreen</item>
        <item name="colorControlActivated">@color/lightGreen</item>
    </style>

    <style name="AppDarkTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>

    </style>

    <style name="GreenButtonTheme" parent="AppTheme">
        <item name="colorButtonNormal">@color/lightGreen</item>
    </style>

</resources>
