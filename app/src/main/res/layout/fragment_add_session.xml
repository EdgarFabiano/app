<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddSessionFragment">


    <ImageView
        android:id="@+id/readyBtn"
        android:layout_width="131dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_bg"
        app:layout_constraintBottom_toBottomOf="@+id/dateBtn"
        app:layout_constraintStart_toEndOf="@+id/dateBtn"
        app:layout_constraintTop_toTopOf="@+id/dateBtn"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/sessionNameText"
        android:layout_width="296dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Dê um nome a sua próxima sessão"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        android:text="Criar Sessão"
        app:layout_constraintBottom_toTopOf="@+id/sessionNameText"
        app:layout_constraintStart_toStartOf="@+id/sessionNameText" />

    <ImageView
        android:id="@+id/dateBtn"
        android:layout_width="131dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sessionNameText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRONTO"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/readyBtn"
        app:layout_constraintEnd_toEndOf="@+id/readyBtn"
        app:layout_constraintStart_toStartOf="@+id/readyBtn"
        app:layout_constraintTop_toTopOf="@+id/readyBtn" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="58dp"
        android:layout_height="17dp"
        android:text="17/10"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/dateBtn"
        app:layout_constraintEnd_toEndOf="@+id/dateBtn"
        app:layout_constraintStart_toStartOf="@+id/dateBtn"
        app:layout_constraintTop_toTopOf="@+id/dateBtn" />

</android.support.constraint.ConstraintLayout>