<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ActionRatePageFragment">

    <ScrollView
        android:id="@+id/actionDescriptionScrollView"
        android:layout_width="277dp"
        android:layout_height="204dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/actionDescriptionInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/scrollView3"
                app:layout_constraintStart_toStartOf="@+id/scrollView3"
                app:layout_constraintTop_toTopOf="@+id/scrollView3" />
        </LinearLayout>
    </ScrollView>

    <SeekBar
        android:id="@+id/successRatingBar"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="300dp"
        android:layout_height="14dp"
        android:layout_marginTop="12dp"
        android:max="10"
        android:progress="3"
        app:layout_constraintEnd_toEndOf="@+id/actionDescriptionScrollView"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/actionDescriptionScrollView"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Taxa de sucesso"
        app:layout_constraintEnd_toEndOf="@+id/actionDescriptionScrollView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/actionDescriptionScrollView"
        app:layout_constraintTop_toBottomOf="@+id/actionDescriptionScrollView" />

    <TextView
        android:id="@+id/successRatingText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/successRatingBar"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="@+id/successRatingBar"
        app:layout_constraintTop_toBottomOf="@+id/successRatingBar"
        app:layout_constraintVertical_bias="0.008" />

</android.support.constraint.ConstraintLayout>