<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AdventureEditFragment">


    <ImageView
        android:id="@+id/readyEditBtn2"
        android:layout_width="131dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_bg"
        app:layout_constraintStart_toStartOf="@+id/advInfoEdit"
        app:layout_constraintTop_toBottomOf="@+id/advInfoEdit" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginBottom="8dp"
        android:text="Editar Aventura"
        app:layout_constraintBottom_toTopOf="@+id/advNameEdit"
        app:layout_constraintStart_toStartOf="@+id/advNameEdit" />

    <EditText
        android:id="@+id/advNameEdit"
        android:layout_width="296dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="DÃª um nome a sua aventura"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <EditText
        android:id="@+id/advInfoEdit"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Resumo da aventura"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advNameEdit" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRONTO"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/readyEditBtn2"
        app:layout_constraintEnd_toEndOf="@+id/readyEditBtn2"
        app:layout_constraintStart_toStartOf="@+id/readyEditBtn2"
        app:layout_constraintTop_toTopOf="@+id/readyEditBtn2" />

</android.support.constraint.ConstraintLayout>